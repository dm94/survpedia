---
import { getCollection, getEntry } from "astro:content";
import { Image } from "astro:assets";
import Layout from "@layouts/Layout.astro";
import { useTranslations } from "@i18n/utils";

export async function getStaticPaths() {
  const knowledge = await getCollection("knowledge");
  return knowledge.map(entry => {
    const [lang, slug] = entry.slug.split("/");
    return {
      params: { lang, slug },
      props: { entry },
    };
  });
}

const { entry } = Astro.props;
const { Content } = await entry.render();
const { lang } = Astro.params;
const t = useTranslations(lang as any);
const getDescriptionFromMarkdown = (markdown: string) => {
  const cleaned = markdown
    .replace(/!\[[^\]]*\]\([^)]*\)/g, "")
    .replace(/\[([^\]]+)\]\([^)]*\)/g, "$1")
    .replace(/[`*_>#-]/g, " ")
    .replace(/\s+/g, " ")
    .trim();
  return cleaned.slice(0, 160);
};
const rawDescription = getDescriptionFromMarkdown(entry.body ?? "");
const metaDescription =
  rawDescription.length > 0 ? rawDescription : entry.data.title;
const metaImage = entry.data.image?.src ?? "/logo.png";

const materialLinks = await Promise.all(
  (entry.data.relatedMaterials || []).map(async id => {
    const material = await getEntry("materials", `${lang}/${id}`);
    return {
      id,
      href: `/${lang}/materials/${id}`,
      name: material?.data.title || id,
    };
  })
);
---

<Layout
  title={entry.data.title}
  description={metaDescription}
  image={metaImage}
>
  <div class="max-w-4xl mx-auto">
    <a
      href={`/${lang}/knowledge`}
      class="text-blue-600 hover:underline mb-4 inline-block"
      >&larr; {t("knowledge.title")}</a
    >

    <article
      class="bg-white dark:bg-slate-800 shadow-lg rounded-2xl overflow-hidden"
    >
      <header
        class="p-8 border-b border-slate-100 dark:border-slate-700 bg-slate-50 dark:bg-slate-900/50"
      >
        {
          entry.data.aiGenerated && (
            <div class="mb-4">
              <span class="inline-flex items-center gap-1 rounded-full bg-amber-100 px-3 py-1 text-xs font-semibold text-amber-800 dark:bg-amber-900/40 dark:text-amber-200">
                {t("common.aiGenerated")}
              </span>
            </div>
          )
        }
        <h1 class="text-4xl font-extrabold text-slate-900 dark:text-white mb-6">
          {entry.data.title}
        </h1>

        {
          entry.data.image && (
            <div class="mb-6 rounded-xl overflow-hidden shadow-md">
              <Image
                src={entry.data.image}
                alt={entry.data.title}
                class="w-full h-64 object-cover"
              />
            </div>
          )
        }

        {
          materialLinks && materialLinks.length > 0 && (
            <div class="mb-2">
              <h3 class="text-sm font-bold text-slate-500 uppercase mb-2">
                {t("common.relatedMaterials")}
              </h3>
              <div class="flex flex-wrap gap-2">
                {materialLinks.map(link => (
                  <a
                    href={link.href}
                    class="bg-blue-50 hover:bg-blue-100 dark:bg-blue-900/30 dark:hover:bg-blue-900/50 text-blue-700 dark:text-blue-300 px-3 py-1 rounded-full text-sm font-medium transition-colors capitalize"
                  >
                    {link.name}
                  </a>
                ))}
              </div>
            </div>
          )
        }
      </header>

      <div class="p-8">
        <div class="prose dark:prose-invert max-w-none">
          <Content />
        </div>
      </div>
    </article>
  </div>
</Layout>
