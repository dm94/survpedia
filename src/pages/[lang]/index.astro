---
import Layout from '../../layouts/Layout.astro';
import { useTranslations } from '../../i18n/utils';
import Card from '../../components/Card.astro';

export function getStaticPaths() {
  return [
    { params: { lang: 'es' } },
    { params: { lang: 'en' } },
  ];
}

const { lang } = Astro.params;
const t = useTranslations(lang as any);
---

<Layout title="Survpedia">
  <section class="py-20 text-center">
    <h1 class="text-5xl font-extrabold text-transparent bg-clip-text bg-gradient-to-r from-blue-600 to-cyan-500 mb-6">
      Survpedia
    </h1>
    <p class="text-xl text-slate-600 dark:text-slate-400 max-w-2xl mx-auto mb-10">
      {lang === 'es' 
        ? 'Explora la base del conocimiento humano: desde los elementos básicos hasta los inventos que cambiaron el mundo.' 
        : 'Explore the foundation of human knowledge: from basic elements to inventions that changed the world.'}
    </p>
  </section>

  <section class="grid grid-cols-1 md:grid-cols-3 gap-8">
    <Card 
      href={`/${lang}/elements`}
      title={t('nav.elements')}
      body={lang === 'es' ? 'La tabla periódica interactiva. Conoce los bloques fundamentales del universo.' : 'The interactive periodic table. Discover the fundamental blocks of the universe.'}
    />
    <Card 
      href={`/${lang}/materials`}
      title={t('nav.materials')}
      body={lang === 'es' ? 'Compuestos, aleaciones y recursos naturales. Aprende cómo procesarlos.' : 'Compounds, alloys, and natural resources. Learn how to process them.'}
    />
    <Card 
      href={`/${lang}/inventions`}
      title={t('nav.inventions')}
      body={lang === 'es' ? 'Inventos que forjaron la civilización. Guías paso a paso.' : 'Inventions that shaped civilization. Step-by-step guides.'}
    />
  </section>
</Layout>
