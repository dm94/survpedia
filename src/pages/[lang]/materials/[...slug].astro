---
import { getCollection } from "astro:content";
import { Image } from "astro:assets";
import Layout from "@layouts/Layout.astro";
import { useTranslations } from "@i18n/utils";

export async function getStaticPaths() {
  const materials = await getCollection("materials");
  return materials.map(entry => {
    const [lang, slug] = entry.slug.split("/");
    return {
      params: { lang, slug },
      props: { entry },
    };
  });
}

const { entry } = Astro.props;
const { Content } = await entry.render();
const { lang } = Astro.params;
const t = useTranslations(lang as any);

const compositionLinks = entry.data.composition?.map(id => ({
  id,
  href: `/${lang}/elements/${id}`,
  name: id, // Placeholder, would need lookup for real name
}));
---

<Layout title={entry.data.title}>
  <div class="max-w-4xl mx-auto">
    <a
      href={`/${lang}/materials`}
      class="text-blue-600 hover:underline mb-4 inline-block"
      >&larr; {t("materials.title")}</a
    >

    <article
      class="bg-white dark:bg-slate-800 shadow-lg rounded-2xl overflow-hidden"
    >
      <header
        class="p-8 border-b border-slate-100 dark:border-slate-700 bg-slate-50 dark:bg-slate-900/50"
      >
        <div class="flex items-center gap-4 mb-2">
          <span
            class="bg-purple-600 text-white text-xs font-bold px-2 py-1 rounded"
          >
            {entry.data.naturalAvailability ? "Natural" : "Synthetic"}
          </span>
        </div>
        <h1 class="text-4xl font-extrabold text-slate-900 dark:text-white mb-4">
          {entry.data.title}
        </h1>
        {
          entry.data.formula && (
            <div class="text-2xl font-mono text-slate-500 mb-6">
              {entry.data.formula}
            </div>
          )
        }

        {
          entry.data.image && (
            <div class="mb-6 rounded-xl overflow-hidden shadow-md">
              <Image
                src={entry.data.image}
                alt={entry.data.title}
                class="w-full h-64 object-cover"
              />
            </div>
          )
        }

        {
          compositionLinks && compositionLinks.length > 0 && (
            <div class="mb-6">
              <h3 class="text-sm font-bold text-slate-500 uppercase mb-2">
                {t("common.madeOf")}
              </h3>
              <div class="flex flex-wrap gap-2">
                {compositionLinks.map(link => (
                  <a
                    href={link.href}
                    class="bg-blue-50 hover:bg-blue-100 dark:bg-blue-900/30 dark:hover:bg-blue-900/50 text-blue-700 dark:text-blue-300 px-3 py-1 rounded-full text-sm font-medium transition-colors capitalize"
                  >
                    {link.name}
                  </a>
                ))}
              </div>
            </div>
          )
        }
      </header>

      <div class="p-8">
        <div class="prose dark:prose-invert max-w-none mb-8">
          <Content />
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
          <div class="bg-slate-50 dark:bg-slate-900/50 p-6 rounded-xl">
            <h3 class="font-bold mb-3 text-slate-900 dark:text-white">
              {t("common.properties")}
            </h3>
            <ul
              class="list-disc list-inside space-y-1 text-slate-700 dark:text-slate-300"
            >
              {entry.data.properties.map(p => <li>{p}</li>)}
            </ul>
          </div>
          <div class="bg-slate-50 dark:bg-slate-900/50 p-6 rounded-xl">
            <h3 class="font-bold mb-3 text-slate-900 dark:text-white">
              {t("common.usedFor")}
            </h3>
            <ul
              class="list-disc list-inside space-y-1 text-slate-700 dark:text-slate-300"
            >
              {entry.data.uses.map(u => <li>{u}</li>)}
            </ul>
          </div>
        </div>

        {
          entry.data.manufacturingProcess && (
            <div class="mt-8 p-6 bg-amber-50 dark:bg-amber-900/20 border border-amber-100 dark:border-amber-800 rounded-xl">
              <h3 class="font-bold mb-2 text-amber-900 dark:text-amber-100">
                Manufacturing / Process
              </h3>
              <p class="text-amber-800 dark:text-amber-200">
                {entry.data.manufacturingProcess}
              </p>
            </div>
          )
        }
      </div>
    </article>
  </div>
</Layout>
