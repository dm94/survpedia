---
interface Props {
    symbol: string;
    number: number;
    name: string;
    category: string;
    href: string;
}
const { symbol, number, name, category, href } = Astro.props;

const categoryLower = category.toLowerCase();
let colorClass = 'bg-slate-100 dark:bg-slate-800 text-slate-900 dark:text-slate-100';

if (categoryLower.includes('gas noble') || categoryLower.includes('noble gas')) {
    colorClass = 'bg-purple-100 dark:bg-purple-900/40 text-purple-900 dark:text-purple-100 border-purple-200 dark:border-purple-800';
} else if (categoryLower.includes('alkali metal')) {
    colorClass = 'bg-red-100 dark:bg-red-900/40 text-red-900 dark:text-red-100 border-red-200 dark:border-red-800';
} else if (categoryLower.includes('alkaline earth metal')) {
    colorClass = 'bg-orange-100 dark:bg-orange-900/40 text-orange-900 dark:text-orange-100 border-orange-200 dark:border-orange-800';
} else if (categoryLower.includes('transition metal')) {
    colorClass = 'bg-blue-100 dark:bg-blue-900/40 text-blue-900 dark:text-blue-100 border-blue-200 dark:border-blue-800';
} else if (categoryLower.includes('post-transition metal')) {
    colorClass = 'bg-cyan-100 dark:bg-cyan-900/40 text-cyan-900 dark:text-cyan-100 border-cyan-200 dark:border-cyan-800';
} else if (categoryLower.includes('metalloid')) {
    colorClass = 'bg-teal-100 dark:bg-teal-900/40 text-teal-900 dark:text-teal-100 border-teal-200 dark:border-teal-800';
} else if (categoryLower.includes('lanthanide')) {
    colorClass = 'bg-pink-100 dark:bg-pink-900/40 text-pink-900 dark:text-pink-100 border-pink-200 dark:border-pink-800';
} else if (categoryLower.includes('actinide')) {
    colorClass = 'bg-rose-100 dark:bg-rose-900/40 text-rose-900 dark:text-rose-100 border-rose-200 dark:border-rose-800';
} else if (categoryLower.includes('no metal') || categoryLower.includes('nonmetal')) {
    colorClass = 'bg-green-100 dark:bg-green-900/40 text-green-900 dark:text-green-100 border-green-200 dark:border-green-800';
}
// Add more categories as needed

---
<a href={href} class:list={[`flex flex-col items-center justify-between p-2 rounded-lg shadow-sm hover:shadow-md hover:scale-110 transition-all border`,`${colorClass}`,`aspect-square`]}>
    <span class="text-xs font-mono self-start opacity-60">{number}</span>
    <span class="text-3xl font-bold">{symbol}</span>
    <span class="text-[10px] font-medium truncate w-full text-center uppercase tracking-wider">{name}</span>
</a>
