---
import { getLangFromUrl } from '../i18n/utils';
import Header from '../components/Header.astro';
import '../styles/global.css';

interface Props {
	title: string;
}

const { title } = Astro.props;
const lang = getLangFromUrl(Astro.url);
---

<!doctype html>
<html lang={lang}>
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Survpedia - Encyclopedia of Inventions" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body class="bg-slate-50 text-slate-900 dark:bg-slate-900 dark:text-slate-100 min-h-screen flex flex-col">
		<Header />
		<main class="flex-grow container mx-auto px-4 py-8">
			<slot />
		</main>
		<footer class="bg-slate-200 dark:bg-slate-800 py-6 text-center text-sm text-slate-600 dark:text-slate-400">
			&copy; {new Date().getFullYear()} Survpedia. All rights reserved.
		</footer>
	</body>
</html>
